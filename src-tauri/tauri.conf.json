{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Cabalen Groceries POS System",
	"version": "1.0.1",
	"identifier": "com.francis1009.pos-system",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "Cabalen Groceries POS System",
				"width": 1024,
				"height": 768,
				"resizable": false,
				"fullscreen": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
